<Page x:Class="SharpGit.UI.SimpleModal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SharpGit.UI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SimpleModal">

    <Grid>

        <Rectangle Fill="#FF2A2D30" Height="200" Margin="10,50,10,0" Stroke="Black" VerticalAlignment="Top">
            <Rectangle.Effect>
                <DropShadowEffect ShadowDepth="0"/>
            </Rectangle.Effect>
        </Rectangle>
        <TextBlock x:Name="Output" Margin="17,57,17,0" TextWrapping="Wrap" Text="" Foreground="#FFD2FFF1" Background="#FF2A2D30" Height="186" VerticalAlignment="Top"/>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Right" Margin="0,222,18,0" Width="75" Click="Close" Foreground="White" Background="#FF00C160" BorderBrush="#FF91D3B2" Height="20" VerticalAlignment="Top"/>
    </Grid>
</Page>
